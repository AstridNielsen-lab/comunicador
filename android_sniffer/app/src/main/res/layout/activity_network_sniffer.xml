<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1a1a1a">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔍 Network Sniffer"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#00ff88"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Status -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔍 Iniciando varredura..."
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="#333333"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Bandwidth Progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2a2a2a"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 Banda Acumulada"
            android:textSize="14sp"
            android:textColor="#00ff88"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/bandwidthText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.00MB / 30MB"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/bandwidthProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="30"
            android:progress="0"
            android:progressTint="#00ff88"
            android:progressBackgroundTint="#555555" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meta: 30MB para envio"
            android:textSize="12sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Networks List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#2a2a2a"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🌐 Redes Ancoradas"
            android:textSize="14sp"
            android:textColor="#00ff88"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/networksText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Procurando redes disponíveis..."
                android:textSize="14sp"
                android:textColor="#cccccc"
                android:lineSpacingExtra="4dp"
                android:fontFamily="monospace" />

        </ScrollView>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/sendButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="🚀 ENVIAR MENSAGEM"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#ff4444"
            android:elevation="4dp"
            android:enabled="false"
            android:layout_marginEnd="8dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="🔄"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="#666666"
            android:elevation="4dp"
            android:onClick="refreshNetworks" />

    </LinearLayout>

    <!-- Info Footer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💡 O app se ancora superficialmente em redes disponíveis\npara acumular banda até conseguir enviar a mensagem"
        android:textSize="12sp"
        android:textColor="#888888"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="2dp" />

</LinearLayout>
